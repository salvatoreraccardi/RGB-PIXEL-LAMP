#include <Adafruit_NeoPixel.h>

#define PIN 6

#define NUMPIXELS 28

Adafruit_NeoPixel pixels = Adafruit_NeoPixel(NUMPIXELS, PIN, NEO_GRB + NEO_KHZ800);

int delayval = 200; 

void setup() {
  pixels.begin();
}

void loop() {
    for(int i=0;i<NUMPIXELS;i++){
    pixels.setPixelColor(i, pixels.Color(255,255,255)); //WHITE COLOR
    pixels.show(); 
    delay(delayval); 
  }
  
}
